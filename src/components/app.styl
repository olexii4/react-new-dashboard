.main-page-loader
  font-family: Helvetica, Arial, sans-serif
  font-size: 24px
  color: #fff
  background-color: #000
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: auto
  z-index: 80

.main-page-loader .ide-page-loader-content img
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: auto

.ide-page-loader-content img
  max-width: 140px
  max-height: 140px
  animation-name: opacity
  animation-duration: 2s
  animation-iteration-count: infinite
  animation-timing-function: ease-in-out

@keyframes opacity
  0%, 100%
    opacity: 0
  50%
    opacity: 1

.ide-page-frame
  width 100%
  height 100%
  border none

.page-label
  text-align center
  font-size 20px
  color #353e50

.page-description
  padding 5px 25px
  min-height 30px
  color #6e6e6e
  background-color #ededed
  border-top 1px solid #cbcbcb
  border-bottom 1px solid #cbcbcb
  font-size 14px
  a
    color #4a90e2
    margin-left 5px

.header-buttons
  .pf-c-button
    color #fff
    background-color #4a90e2
    border-radius 2px
    font-size 14px
    line-height 36px
    padding-top 0
    padding-bottom 0
    padding-left 15px
    padding-right 15px
    font-weight 400
  & + section.pf-c-page__main-section
    padding-top 0
    border-top 1px solid #e4e4e4

.pf-c-alert
  position absolute
  top 68px
  right 17px
  width 550px
  z-index 1000
