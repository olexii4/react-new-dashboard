.ide-loader-page
  position relative
  padding-left 0
  padding-right 0
  padding-bottom 0

  .pf-c-tab-content
    position relative
    height 100%

  .pf-c-empty-state
    position absolute
    left 0
    right 0
    bottom 0
    top 0

.ide-loader-wizard .pf-c-wizard__nav
  width 100%
  border none
  pointer-events none

  .error
    color black

  .error,
  .progress
    font-weight bold

  .progress
    color #0766cc

  .pf-c-wizard__nav-link
    margin-left 8px

    & > svg
      margin-right 5px

    .wizard-icon
      position absolute
      left -56px
      top 3px

.ide-loader-wizard .pf-c-wizard__toggle
  padding-left 56px

  .pf-c-wizard__toggle-list-item
    & > svg
      margin-right 5px

    .wizard-icon
      position absolute
      left -56px
      top 3px

.ide-iframe-page
  height 100%
  position relative
  background-color black

#ide-iframe
  width 100%
  height 100%
  border none
