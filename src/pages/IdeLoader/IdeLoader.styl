.ide-loader-page
  overflow hidden
  .pf-c-empty-state
    padding-bottom calc(100vh - 380px)
    margin 0 -25px -25px -25px

.ide-loader-wizard .pf-c-wizard__nav
  width 100%
  border none
  pointer-events none

  .error
    color black

  .error,
  .progress
    font-weight bold

  .progress
    color #0766cc

  .pf-c-wizard__nav-link
    margin-left 8px

    & > svg
      margin-right 5px

    .wizard-icon
      position absolute
      left -56px
      top 3px

.ide-loader-wizard .pf-c-wizard__toggle
  padding-left 56px

  .pf-c-wizard__toggle-list-item
    & > svg
      margin-right 5px

    .wizard-icon
      position absolute
      left -56px
      top 3px

.ide-iframe-page
  height 100%
  position relative
  background-color black

#ide-iframe
  width 100%
  height 100%
  border none
